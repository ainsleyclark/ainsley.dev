{
	"name": "ainsley.dev",
	"version": "1.0.0",
	"author": "Ainsley Clark",
	"description": "Website code for ainsley.dev",
	"license": "BSD-3",
	"scripts": {
		"setup": "sudo chmod -R 777 ./bin && ./bin/setup-deps.sh && ./bin/setup.sh",
		"setup:deps": "sudo chmod -R 777 ./bin && ./bin/setup-deps.sh",
		"serve": "hugo server",
		"serve-no-reload": "hugo server --disableLiveReload",
		"build": "npm run hugo:clean && hugo --environment development --config params.yaml",
		"build:staging": "npm run hugo:clean && hugo --environment staging --config params.yaml,config-staging.yaml --minify && npm run image",
		"build:production": "npm run hugo:clean && hugo --environment production --config params.yaml,config-production.yaml --minify && npm run image",
		"build:prod": "npm run build:production",
		"hugo:clean": "rm -rf public",
		"image": "npx ts-node image.ts",
		"image:shell": "sudo chmod -R 777 ./bin && ./bin/image-optim.sh",
		"clean": "prettier --config ./config/.prettierrc --write ./**/*.{css,scss,json,js} --ignore-path ./config/.prettierignore && npx eslint -c ./config/.eslintrc assets/js/app.js --fix",
		"lint": "npm run lint:scss && npm run lint:js",
		"lint:scss": "sass-lint --config ./config/.sass-lint.yml '**/*.scss' --verbose --no-exit",
		"lint:js": "npx eslint -c ./config/.eslintrc **/*.js"
	},
	"dependencies": {
		"@babel/cli": "^7.20.7",
		"@babel/core": "^7.20.12",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-typescript": "^7.18.6",
		"@barba/core": "^2.9.7",
		"@types/sharp": "^0.31.1",
		"normalize.css": "^8.0.1",
		"sharp": "^0.31.3",
		"smoothscroll-polyfill": "^0.4.4",
		"svgo": "^3.0.2",
		"vanilla-lazyload": "^17.8.3"
	},
	"devDependencies": {
		"@types/node": "^18.11.18",
		"eslint": "^8.31.0",
		"hugo-bin-extended": "^0.109.0"
	}
}
