{
	"name": "ainsley.dev",
	"version": "1.0.0",
	"author": "Ainsley Clark <hello@ainsley.dev>",
	"description": "Website code for ainsley.dev",
	"license": "BSD-3",
	"scripts": {
		"serve": "vercel dev",
		"serve-no-reload": "hugo server --disableLiveReload",
		"build": "npm run hugo:clean && hugo --environment development",
		"build:staging": "npm run hugo:clean && hugo --environment staging --minify",
		"build:prod": "npm run hugo:clean && hugo --environment production --minify && npm run image",
		"build:test": "npm run hugo:clean && hugo --environment production --minify && npm run image && go run main.go",
		"hugo:clean": "rm -rf public",
		"image": "./bin/image-optim.sh",
		"clean": "prettier --write ./**/*.{ts,tsx,scss,json}",
		"lint": "npm run lint:scss && npm run lint:js",
		"lint:scss": "npx stylelint '**/*.scss'",
		"lint:js": "eslint --config .eslintrc.json --fix 'assets/**/*.{ts,tsx}'",
		"precommit": "npx lint-staged --debug"
	},
	"dependencies": {
		"@barba/core": "^2.9.7",
		"@googlemaps/js-api-loader": "^1.15.1",
		"animejs": "^3.2.1",
		"aos": "^3.0.0-beta.6",
		"normalize.css": "^8.0.1",
		"smoothscroll-polyfill": "^0.4.4",
		"toastify-js": "^1.12.0"
	},
	"devDependencies": {
		"@types/animejs": "^3.1.7",
		"@types/aos": "^3.0.4",
		"@types/google.maps": "^3.51.0",
		"@types/grecaptcha": "^3.0.4",
		"@types/locomotive-scroll": "^4.1.0",
		"@types/node": "^18.11.18",
		"@types/toastify-js": "^1.11.1",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"hugo-bin-extended": "^0.110.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"prettier": "2.8.4",
		"prettier-plugin-go-template": "^0.0.13",
		"sharp-cli": "^4.1.0",
		"stylelint": "^15.1.0",
		"stylelint-config-standard-scss": "^7.0.0",
		"swagger-typescript-api": "^12.0.3",
		"typescript": "^4.9.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,scss,json}": [
			"prettier --write"
		],
		"*.ts": [
			"eslint --fix"
		],
		"*.go": [
			"gofmt -w"
		]
	},
	"babel": {
		"presets": [
			"@babel/preset-typescript",
			"@babel/preset-env"
		]
	},
	"prettier": {
		"semi": true,
		"singleQuote": true,
		"trailingComma": "all",
		"overrides": [
			{
				"files": [
					"*.html"
				],
				"options": {
					"parser": "go-template",
					"bracketSameLine": false,
					"htmlWhitespaceSensitivity": "ignore"
				}
			}
		]
	},
	"stylelint": {
		"extends": "stylelint-config-standard-scss",
		"rules": {
			"color-hex-length": null,
			"color-function-notation": "legacy",
			"comment-empty-line-before": "always",
			"no-invalid-double-slash-comments": null,
			"declaration-empty-line-before": "never",
			"value-keyword-case": [
				"lower",
				{
					"ignoreProperties": [
						"/^\\$/"
					]
				}
			],
			"rule-empty-line-before": [
				"always",
				{
					"ignore": [
						"inside-block-and-after-rule"
					]
				}
			],
			"property-no-vendor-prefix": null,
			"selector-no-vendor-prefix": null,
			"scss/no-global-function-names": null,
			"scss/double-slash-comment-empty-line-before": null
		}
	}
}
