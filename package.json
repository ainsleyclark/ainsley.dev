{
	"name": "ainsley.dev",
	"version": "1.0.0",
	"author": "Ainsley Clark <hello@ainsley.dev>",
	"description": "Website code for ainsley.dev",
	"license": "BSD-3",
	"scripts": {
		"serve": "vercel dev",
		"serve-no-reload": "hugo server --disableLiveReload",
		"build": "npm run hugo:clean && hugo --environment development --config params.yaml",
		"build:staging": "npm run hugo:clean && hugo --environment staging --config params.yaml,config-staging.yaml --minify && npm run image",
		"build:prod": "npm run hugo:clean && hugo --environment production --config params.yaml,config-production.yaml --minify && npm run image",
		"hugo:clean": "rm -rf public",
		"precommit": "lint-staged",
		"image": "npx ts-node image.ts",
		"clean": "prettier --config ./config/.prettierrc --write ./**/*.{css,scss,json,js} --ignore-path ./config/.prettierignore && npx eslint -c ./config/.eslintrc assets/js/app.js --fix",
		"lint": "npm run lint:scss && npm run lint:js",
		"lint:scss": "sass-lint --config ./config/.sass-lint.yml '**/*.scss' --verbose --no-exit",
		"lint:js": "eslint --config .eslintrc.json --fix 'assets/**/*.{ts,tsx}'"
	},
	"dependencies": {
		"@barba/core": "^2.9.7",
		"@googlemaps/js-api-loader": "^1.15.1",
		"@types/toastify-js": "^1.11.1",
		"@vercel/edge": "^0.2.7",
		"normalize.css": "^8.0.1",
		"smoothscroll-polyfill": "^0.4.4",
		"toastify-js": "^1.12.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.20.7",
		"@babel/core": "^7.20.12",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-typescript": "^7.18.6",
		"@types/google.maps": "^3.51.0",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.52.0",
		"@typescript-eslint/parser": "^5.52.0",
		"eslint": "^8.34.0",
		"hugo-bin-extended": "^0.109.0",
		"lint-staged": "^13.1.2",
		"prettier": "2.8.4",
		"stylelint": "^15.1.0",
		"stylelint-config-standard-scss": "^7.0.0",
		"typescript": "^4.9.5",
		"husky": "^8.0.0"
	},
	"lint-staged": {
		"{assets}/**/*.ts": [
			"eslint"
		]
	},
	"prettier": {
		"semi": true,
		"singleQuote": true,
		"trailingComma": "all"
	}
}
